.container{
    width: 100%;
    height: 100%;
}

.avatar-container{
    position: relative;
    text-align: center;
    padding-top: 50%;
}


.avatar{
    width: 5rem;
    height: 5rem;
    background-color: #e5e5e5;
    border-radius: 50%;
}

.item{
    line-height: 3rem;
}

.textarea{
  background:rgba(0,0,0,0.4);
  color: #fff;
  padding: 5px;
  max-height: 300px;
}
.textarea textarea{
  max-height: 300px;

#bg{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index:-1;

}
.genate-btn{
  width:200rpx;
  height:100rpx;
  line-height:100rpx;
  color:#fff;
  text-align:center;
  border:1px solid #000;
  position:absolute;
  right:0;
  bottom:0;
  background:#000;
}

